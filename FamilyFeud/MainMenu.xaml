<Window x:Class="FamilyFeud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyFeud"
        xmlns:LocalControls="clr-namespace:FamilyFeud.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        Closed="MainMenu_Closed"
        x:Name="ElementRoot">
  <Window.Resources>
    <ResourceDictionary>
      <LinearGradientBrush x:Key="TestBrushBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStopCollection>
          <GradientStop Color="Gold" Offset="0.25"/>
          <GradientStop Color="Yellow" Offset="0.75"/>
        </GradientStopCollection>
      </LinearGradientBrush>
      <SolidColorBrush x:Key="TestBrushBorder" Color="LightSkyBlue"/>
    </ResourceDictionary>
  </Window.Resources>

  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Focusable="False">
    <Border Background="#000123" Width="1920" Height="{Binding ViewingAreaHeight, Source=ElementRoot}" x:Name="BackgroundRoot">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="33*" />
          <ColumnDefinition Width="33*" />
          <ColumnDefinition Width="33*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="47*" />
          <RowDefinition Height="47*" />
          <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" 
                Grid.Row="0" 
                Width="200" 
                Height="200"
                BorderThickness="0"
                Background="{StaticResource TestBrushBorder}"
                ClipToBounds="True">
          <Border.Clip>
            <PathGeometry>
              <PathFigure IsClosed="True" StartPoint="0,200">
                <PolyLineSegment Points="200,200 163,0 37,0"/>
              </PathFigure>
            </PathGeometry>
          </Border.Clip>
          <Path Data="M15,0 L60,0 75,30 0,30 z" Stretch="Fill" 
                Stroke="Black" StrokeDashArray="3" 
                StrokeThickness="5" Fill="{StaticResource TestBrushBackground}"
                Margin="10" RenderTransformOrigin="0.5,0.5">
            <Path.RenderTransform>
              <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.742"/>
                <TranslateTransform/>
              </TransformGroup>
            </Path.RenderTransform>
          </Path>
        </Border>

        <Grid x:Name="QuestionListGrid" Grid.Column="2" Grid.Row="0" Margin="20">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
          </Grid.RowDefinitions>
          <LocalControls:QuestionListView x:Name="QuestionList" Header="Standard Questions" Grid.Column="0" Grid.Row="0"/>
          <LocalControls:QuestionListView x:Name="BonusQuestionList" Header="Bonus Questions" Grid.Column="1" Grid.Row="0"/>
          <Button Grid.Column="0" Grid.Row="1" Height="30" Width="175" Style="{StaticResource FamilyFuedButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Add Question" FontSize="14"/>
          <Button Grid.Column="1" Grid.Row="1" Height="30" Width="175" Style="{StaticResource FamilyFuedButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Add Bonus Question" FontSize="14"/>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
          <Border BorderBrush="Transparent" Width="500" Height="300" VerticalAlignment="Top" Margin="30">
            <Border.Background>
              <ImageBrush ImageSource="/FamilyFeud;component/Images/FamilFeudLogo.png"/>
            </Border.Background>
          </Border>

          <Grid x:Name="ButtonGrid" Height="120">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Height="40" Width="200" Style="{StaticResource FamilyFuedButtonStyle}" Click="btnBeginCustomGame_Click" Content="Start Custom Game" FontSize="19"/>
            <Button Grid.Column="1" Grid.Row="0" Height="40" Width="200" Style="{StaticResource FamilyFuedButtonStyle}" Click="btnBeginRandomGame_Click" Content="Start Random Game" FontSize="18"/>
          </Grid>
        </StackPanel>

        <LocalControls:TeamScoreTracker Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="10 0" Width="1600"/>
      </Grid>
    </Border>
  </ScrollViewer>
</Window>
