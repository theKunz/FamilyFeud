      <TextBox Style="{StaticResource FamilyFeudTextBoxStyle}"
               Width="60"
               Height="30"
               PreviewTextInput="TextBox_PreviewTextInput"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Center">
      <Button x:Name="btnSave" Style="{StaticResource FamilyFuedButtonStyle}" Height="25" Width="70" Content="Save" Margin="20,10" Click="btnSave_Click"/>
      <Button x:Name="btnCancel" Style="{StaticResource FamilyFuedButtonStyle}" Height="25" Width="70" Content="Cancel" Margin="20,10" Click="btnCancel_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
