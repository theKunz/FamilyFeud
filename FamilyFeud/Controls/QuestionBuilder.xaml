      <TextBlock Style="{StaticResource FamilyFeudTextBlockStyle}" Text="Points:" Margin="10" FontSize="16"/>
      <TextBox Style="{StaticResource FamilyFeudTextBoxStyle}"
               Width="60"
               Height="30"
               PreviewTextInput="TextBox_PreviewTextInput"/>
    </StackPanel>
    <StackPanel x:Name="spAnswer5" Orientation="Horizontal" Visibility="{Binding IsNormalQuestion}">
